<div class="text-center">
  <p id="notice"><%= notice %></p>

  <h1>All Orders</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th class="text-center">Buyer Name</th>
        <th class="text-center">Buyer Email</th>
        <th class="text-center">Recipient Name</th>
        <th class="text-center">Recipient Address</th>
        <th class="text-center">Date</th>
        <th class="text-center">Items</th>
        <th class="text-center">Message</th>
        <th class="text-center">Anonymous?</th>
        <th class="text-center">Venmo Username</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.buyer_name %></td>
          <td><%= order.buyer_email %></td>
          <td><%= order.recipient_name %></td>
          <td><%= order.recipient_address %></td>
          <td><%= order.date %></td>
          <td><%= order.items %></td>
          <td><%= order.message %></td>
          <td>
            <% if order.anonymous %>
              Yes
            <% else %>
              No
            <% end %>
          </td>
          <td><%= order.venmo_username %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order_path %>
</div>
